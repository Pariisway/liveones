rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User avatars
    match /avatars/{userId}/{fileName} {
      allow read: if true; // Public read for avatars
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Call recordings (if implemented)
    match /recordings/{callId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if false; // Would be written by server/cloud function
    }
    
    // General rule: authenticated users can upload to their own folder
    match /{path=**}/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}